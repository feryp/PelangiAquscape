                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:text="Faktur Pembelian"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/faktur_nama_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_faktur_pembelian"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_bold"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/faktur_alamat_toko"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/faktur_nama_toko"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/faktur_no_telepon_toko"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/faktur_alamat_toko"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
