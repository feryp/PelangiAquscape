                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="001"
                        android:textColor="@color/disable_thumb_grey"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
