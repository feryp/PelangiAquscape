<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".fragment.BerandaAdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlue"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Hallo,"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/nama_pengguna_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tv_laporan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingTop="30dp"
                    android:text="Laporan"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBlue" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container_laporan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@drawable/border_box_blue"
                        android:elevation="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:padding="10dp"
                                android:text="Laporan Penjualan"
                                android:textColor="@color/colorBlue"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/bulan_laporan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="85dp"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="10dp"
                                android:text="Mei 2019"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/laporanpenjualan" />

                            <TextView
                                android:id="@+id/total_penjualan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Rp. 0"
                                android:textColor="@color/colorBlue"
                                android:textSize="30sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Kategori"
                    android:textColor="#636262"
                    android:textSize="20sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="3">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_transaksi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:id="@+id/transaksi"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_box_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/transaksi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Transaksi"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_mitra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:id="@+id/mitrabisnis"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_box_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/kartubisnis" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Mitra Bisnis"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_barang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:id="@+id/barang"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_box_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/barang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Barang"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!--<android.support.v7.widget.CardView-->
                    <!--android:id="@+id/cv_pembelian"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="10dp"-->
                    <!--app:cardCornerRadius="5dp"-->
                    <!--app:cardElevation="4dp"-->
                    <!--app:cardPreventCornerOverlap="false">-->

                    <!--<LinearLayout-->
                    <!--android:id="@+id/pembelian"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:background="@drawable/border_box_blue"-->
                    <!--android:gravity="center"-->
                    <!--android:orientation="vertical">-->

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:src="@drawable/pembelian" />-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="12dp"-->
                    <!--android:fontFamily="@font/roboto_bold"-->
                    <!--android:text="Pembelian"-->
                    <!--android:textColor="@color/colorBlue"-->
                    <!--android:textSize="14sp" />-->

                    <!--</LinearLayout>-->

                    <!--</android.support.v7.widget.CardView>-->

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_penjualan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:id="@+id/penjualan"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_box_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/penjualan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Penjualan"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_penerimaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:id="@+id/penerimaan"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_box_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/penerimaan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Penerimaan"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_gudang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:id="@+id/gudang"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_box_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:src="@drawable/gudang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Penyimpanan"
                                android:textColor="@color/colorBlue"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>