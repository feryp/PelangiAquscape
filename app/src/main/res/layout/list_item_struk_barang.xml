<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_kode_barang_struk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Kode"
            android:textColor="@color/disable_thumb_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_merek_barang_struk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/roboto_regular"
            android:text="(Merek Barang)"
            android:textColor="@color/disable_thumb_grey"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_harga_barang_struk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Rp. 15.000,00"
                android:textColor="@color/colorDarkGrey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_kali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/roboto_regular"
                android:text="X"
                android:textColor="@color/colorDarkGrey"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_kuantitas_barang_struk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="0"
                android:textColor="@color/colorDarkGray"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_harga_barang_struk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Rp. 15.000,00"
                android:textColor="@color/colorDarkGrey"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>